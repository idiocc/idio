  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "ALAMODE_ENV": "test-dev",
        "NODE_DEBUG": "@idio/idio",
      },
      "console": "integratedTerminal",
      "args": [
        "test/index.js",
        "test/spec",
        "test/mask",
        "-a", "-w", "-t", "9999999"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Example",
      "program": "${workspaceFolder}/node_modules/.bin/alanode",
      "console": "integratedTerminal",
      "env": {
        "ALAMODE_ENV": "test-dev",
        "NODE_ENV": "prod",
      },
      "args": [
        "example/github"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
